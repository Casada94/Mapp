<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.mapp.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/schedule_frag"
        android:name="com.example.mapp.ScheduleFragment"
        android:label="My Schedule"
        tools:layout="@layout/fragment_schedule" />
    <fragment
        android:id="@+id/login_frag"
        android:name="com.example.mapp.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_forgetPassword"
            app:destination="@+id/forgetPassword_frag"
            app:launchSingleTop="true"
            app:popUpTo="@id/login_frag"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/forgetPassword_frag"
        android:name="com.example.mapp.ForgetPasswordFragment"
        android:label="Forget Password"
        tools:layout="@layout/fragment_forgetpassword">

        <action
            android:id="@+id/action_forgetPassword_to_forgetPasswordEmail"
            app:destination="@+id/forgetPasswordEmail_frag"
            app:launchSingleTop="true"
            app:popUpTo="@id/login_frag"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/forgetPasswordEmail_frag"
        android:name="com.example.mapp.ForgetPasswordEmailFragment"
        android:label="Forget Password Email"
        tools:layout="@layout/fragment_forgetpasswordemail">

        <action
            android:id="@+id/action_forgetPasswordEmail_to_login"
            app:destination="@+id/login_frag"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="false" />
    </fragment>



    <fragment
        android:id="@+id/signup_frag"
        android:name="com.example.mapp.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_signup">

        <action
            android:id="@+id/action_signUp_to_login"
            app:destination="@+id/login_frag"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true"/>


    </fragment>

    <fragment
        android:id="@+id/panoramaview"
        android:name="com.example.mapp.PanoFragment"
        tools:layout="@layout/fragment_pano"/>

</navigation>